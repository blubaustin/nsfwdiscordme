{% extends "server/add.html.twig" %}
{% block body %}
  {% if hasServerAccess(server, 'owner') %}
    <div class="row">
      <div class="col col-md-8 offset-md-2 col-sm-12 col-12">
        <div class="menu-buttons">
          <a href="{{ path('upgrade_index', { slug: server.slug }) }}" class="btn btn-info btn-icon">
            {{ icon('app-upgrade') }}
            Upgrade Server
          </a>
          <a href="{{ path('server_team', { slug: server.slug }) }}" class="btn btn-info btn-icon">
            {{ icon('app-team') }}
            Manage Team
          </a>
          <button id="server-delete-btn" class="btn btn-danger btn-icon" type="button" data-server-id="{{ server.discordID }}">
            {{ icon('app-delete') }}
            Delete Server
          </button>
        </div>
      </div>
    </div>
  {% endif %}
  {{ parent() }}
  {% include "server/blocks/delete-modal.html.twig" %}
{% endblock %}
