<div id="modal-server-delete" class="modal modal-primary modal-server-delete fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title">
          Are you sure?
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="modal-server-delete-confirm">
          Enter the name of the server <b>"{{ server.name }}"</b> in the box below to confirm
          the delete.
        </label>
        <input type="text" id="modal-server-delete-confirm" class="form-control" />
      </div>
      <div class="modal-footer">
        <button id="modal-server-delete-btn" type="button" class="btn btn-block btn-danger" disabled>
          {{ icon('app-delete') }}
          Delete Server
        </button>
      </div>
    </div>
  </div>
</div>
