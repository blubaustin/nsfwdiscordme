<div id="modal-server-join" class="modal modal-primary modal-server-join fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          Join Server
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="modal-server-join-password-wrap" class="hidden">
          <label for="modal-server-join-password">
            Password required to join this server.
          </label>
          <input id="modal-server-join-password" type="password" class="form-control" />
        </div>
        <div id="recaptcha-container" class="recaptcha-container gutter-top hidden"></div>
      </div>
      <div class="modal-footer">
        <button id="modal-server-join-btn" type="button" class="btn btn-block btn-success" disabled="disabled">
          {{ icon('app-join') }}
          Join Server
        </button>
      </div>
    </div>
  </div>
</div>
